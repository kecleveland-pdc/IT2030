
@model EventFinder.Models.ViewModels.EventFinderCartViewModel

@{
    ViewBag.Title = "ShoppingCart";
}

@section Scripts{
    <script src="~/Scripts/Apps/EventFinder.js"></script>
}
<h2>Here's your event cart!</h2>
<br />
<div id="update-message"></div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Order #</th>
            <th scope="col">Event Title</th>
            <th scope="col"># of Tickets</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
           <tr>
               <td></td>
               <td>@item.EventSelected.Title</td>
               <td id="item-count-@item.RecordID">@item.Count</td>
               <td><a href="#" class="RemoveLink" data-id="@item.RecordID">Details</a></td>
               <td><a href="#" class="RemoveLink" data-id="@item.RecordID">Remove</a></td>
           </tr>
        } 
    </tbody>
</table>
<p class="button">
    @Html.ActionLink(
        "Back to Main",
        "Index",
        "EventFinderManager"
    )
</p>


