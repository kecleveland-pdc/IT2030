
@model EventFinder.Models.ViewModels.EventFinderCartViewModel

@{
    ViewBag.Title = "OrderSummary";
}

<h4>OrderSummary</h4>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Order #</th>
            <th scope="col">Event Title</th>
            <th scope="col"># of Tickets</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.RecordID.</td>
                <td>@item.EventSelected.Title</td>
                <td id="item-count-@item.RecordID">@item.Count</td>
            </tr>
        }
      
    </tbody>
</table>

<p class="button">
    @Html.ActionLink(
        "Back to Main",
        "Index",
        "EventFinderManager"
    )
</p>

